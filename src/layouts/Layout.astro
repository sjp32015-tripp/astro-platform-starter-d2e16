---
import '../../src/styles/global.css';
import '@fontsource-variable/inter';
import InteractionObserver from '../components/InteractionObserver.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Steven Powers - Ground Game Guidance Community" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="antialiased">
		<div class="flex min-h-screen flex-col">
			<div class="flex-1 bg-gradient-to-br from-slate-900 to-slate-800">
				<Header />
				<main class="container mx-auto max-w-screen-2xl px-6 pb-12 lg:px-16">
					<slot />
				</main>
				<Footer />
			</div>
		</div>
		<InteractionObserver />
	</body>
</html>

<style is:global>
	body {
		background-image: url('/images/lion-crest.jpg');
		background-size: cover;
		background-position: center;
		background-attachment: fixed;
		background-repeat: no-repeat;
		min-height: 100vh;
	}

	body::before {
		content: '';
		position: fixed;
		top: 0;
		left: 0;
		width: 100%;
		height: 100%;
		background: rgba(0, 0, 0, 0.4);
		z-index: -1;
	}

	main {
		position: relative;
		z-index: 1;
	}
</style>